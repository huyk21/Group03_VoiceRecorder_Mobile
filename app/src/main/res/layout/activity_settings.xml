<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:background="@color/md_grey_800xxx"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_back" />
            

        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Settings"
              android:textColor="#80F5F5F5"
              
              android:textSize="25dp"

              android:padding="16dp"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Recording"
                    android:textColor="@color/white"

                    android:textSize="18dp"

                    android:paddingStart="16dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Auto record when there is a input device"

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:thumbTint="@color/white"
                android:trackTint="@color/material_dynamic_neutral_variant100"
                android:scaleX="1.25"
                android:scaleY="1.25"
            />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noice Reduction"
                    android:textColor="@color/white"

                    android:textSize="18dp"

                    android:paddingStart="16dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Auto record when there is a input device"

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoRecord3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:thumbTint="@color/white"
                android:trackTint="@color/material_dynamic_neutral_variant100"
                android:scaleX="1.25"
                android:scaleY="1.25"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="16dp"

                    android:text="Automatic Silence Remove"

                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Auto remove unecessary silence sound  "
                    android:textColor="#b3ffffff"
                    android:textSize="14dp" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoRecord4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleX="1.25"
                android:scaleY="1.25"
                android:thumbTint="@color/white"
                android:trackTint="@color/material_dynamic_neutral_variant100" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="16dp"

                    android:text="AI real time trascript"

                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Auto add transcript when recordings...   "

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoRecord2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleX="1.25"
                android:scaleY="1.25"
                android:thumbTint="@color/white"
                android:trackTint="@color/material_dynamic_neutral_variant100" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio Formation"
                    android:textColor="@color/white"

                    android:textSize="18dp"

                    android:paddingStart="16dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Change formation of recordings to WAV..."

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WAV"
                android:textColor="#b3ffffff"
                android:textSize="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"/>
                <Spinner
                    android:id="@+id/dropdown_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:thumbTint="@color/white"
                    android:trackTint="@color/material_dynamic_neutral_variant100"
                    android:scaleX="1.25"
                    android:scaleY="1.25"
                    />





        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="80dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Recording Statistics"
                    android:textColor="@color/white"

                    android:textSize="18dp"

                    android:paddingStart="16dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Show statistics of records, click for more..."

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>
          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@color/md_black_1000"
              android:contentDescription="@null"
              android:padding="20dp"
              android:layout_marginEnd="0dp"
              android:src="@drawable/baseline_keyboard_arrow_right_24"/>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="80dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Scheduled Recording"
                    android:textColor="@color/white"

                    android:textSize="18dp"

                    android:paddingStart="16dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Scheduled or Application-Based Recording"

                    android:textColor="#b3ffffff"

                    android:textSize="14dp" />
            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/md_black_1000"
                android:contentDescription="@null"
                android:padding="20dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>