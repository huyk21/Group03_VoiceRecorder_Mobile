<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/md_grey_800xxx"
    android:padding="20dp"
    tools:viewBindingIgnore="true">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_gravity="center"
        android:text="Permanently delete record?"
        android:textAppearance="@style/TextAppearance.DialogTitle"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/dialog_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_gravity="center"
        android:text="Do you wish to permanently delete the selected record(s) in the recycle bin? They can not be recovered afterwards."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.DialogContent"/>
w
    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/spacing_tiny">

        <!-- Cancel Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            style="@style/Widget.BorderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_normal" />

        <!-- Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            style="@style/Widget.RaisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_normal"
            android:text="Delete"
            android:textSize="@dimen/text_normal"
            android:backgroundTint="@color/md_red_500"/>
    </LinearLayout>
</LinearLayout>
